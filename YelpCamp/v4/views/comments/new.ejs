<% include ../partials/header %>
<!-- NEW COMMENTS FORM -->
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add a New Comment to <%=campground.name%></h1>
        <div style="width:30%; margin:40px auto;">
            <form action="/campgrounds/<%=campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="your comment">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="your name">
                
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back to listings</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>